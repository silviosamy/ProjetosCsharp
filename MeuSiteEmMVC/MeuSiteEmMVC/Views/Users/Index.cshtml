@model IEnumerable<MeuSiteEmMVC.Models.User>

@{
    ViewData["Title"] = "Usuários";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-light">👥 Lista de Usuários</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Criar Novo Usuário
        </a>
    </div>

    <table class="table table-dark table-bordered table-hover shadow">
        <thead class="bg-secondary text-white">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th class="text-center" style="width: 220px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-1">
                            🖉 Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info me-1">
                            📁 Detalhes
                        </a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">
                            🗑 Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
